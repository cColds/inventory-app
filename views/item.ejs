<!doctype html>
<html lang="en">
    <%- include("./partials/head.ejs") -%>
    <body>
        <%- include("nav"); -%>

        <div class="item">
            <h1><%= item.name %></h1>
            <p><strong><%= item.priceFormatted %></strong></p>
            <p class="item-description"><%= item.description %></p>
            <p class="item-stock">In stock: <%= item.stock %></p>
            <p class="category"><%= item.category %></p>
            <a href="<%=item.url%>/update-item" class="update-item-btn"
                >Update Item</a
            >
        </div>
    </body>
</html>
