<!doctype html>
<html lang="en">
    <%- include("./partials/head.ejs") -%>
    <body>
        <%- include("nav"); -%>
        <div class="form-wrapper">
            <h1 class="title"><%=title%></h1>
            <form action="" method="post" class="item-form">
                <label for="item-field-name">Name</label>
                <input type="text" id="item-field-name" name="item-name" />

                <label for="item-field-description">Description</label>
                <input
                    type="text"
                    id="item-field-description"
                    name="item-description"
                />

                <label for="item-field-price"> Price </label>
                <input
                    type="number"
                    id="item-field-price"
                    name="item-price"
                    value="0"
                />

                <label for="item-field-stock">Stock</label>
                <input
                    type="number"
                    id="item-field-stock"
                    name="item-stock"
                    value="0"
                />

                <label for="item-field-category">Category</label>

                <select name="item-category" id="item-field-category">
                        <% categories.forEach((category) => {%>
                            <option value=<%=category.name %> ><%= category.name%></option>
                            <% }) %>
                    
                        </select>
                        <% if (categories.length === 0) { %>
                            <p class="error-text">You need to create a category first</p>   
                        <% } %>
                <button type="submit" class="submit-btn">Submit</button>
            </form>
        </div>
    </body>
</html>
